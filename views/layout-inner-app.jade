doctype
html(lang="en-US", ng-app="myApp")
	head
		meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
		link(type="text/css", rel="stylesheet", href="vendor/materialize/dist/css/materialize.css",  media="screen,projection")
		link(type="text/css", rel="stylesheet", href="css/inner-app.css",  media="screen,projection")
		link(rel='stylesheet', href='https://fonts.googleapis.com/icon?family=Material+Icons')
		script(src="vendor/angular/angular.min.js")
		script(src="vendor/jquery/dist/jquery.min.js")
		title Pedaleiros
		block head
	body
		script(type="text/javascript", src="vendor/materialize/dist/js/materialize.min.js")
		header
			script(type='text/javascript').
				$(document).ready(function(){$(".button-collapse").sideNav();})
			nav.top-header
				.nav-wrapper.green
					a.button-collapse(href="/home" data-activates="mobile-menu")
						i.mdi-navigation-menu
					ul.side-nav.fixed(id="mobile-menu")
						li: a.menu-principal(href="/home") Pedaleiros
						block menus
					block in-nav
			block header
		.container(ng-controller="AppCtrl")
			.main-content
					block content
			.sidebar
					block sidebar